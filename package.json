{
  "name": "lowcode-lite",
  "version": "0.1.0",
  "private": true,
  "description": "A lightweight, easy-to-use, and extensible low-code platform",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:web": "turbo run dev --filter=@lowcode-lite/web",
    "dev:server": "turbo run dev --filter=@lowcode-lite/server"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.0.0"
}
